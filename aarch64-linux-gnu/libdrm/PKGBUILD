_target=aarch64-linux-gnu

_pkgname=libdrm
pkgname=$_target-$_pkgname
pkgver=2.4.100
pkgrel=1
pkgdec='Userspace interface to kernel DRM services (ARM64)'
arch=(x86_64)
url='https://dri.freedesktop.org/'
licenses=('custom')
depends=($_target-gcc)
makedepends=($_target-meson)
options=(!strip staticlibs !buildflags)
source=(
