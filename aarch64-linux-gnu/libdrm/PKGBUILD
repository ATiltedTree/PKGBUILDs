_srcdir=$_pkgname-$pkgver

check() {
  cd $_srcdir

  ninja -C build-$_target test
}

build() {
  cd $_srcdir

  $_target-meson build-$_target
  ninja -C build-$_target
}

package() {
  cd $_srcdir

  DESTDIR="$pkgdir" ninja -C build-$_target install
}
